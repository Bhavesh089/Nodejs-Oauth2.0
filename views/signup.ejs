  <body>
    <div class="container" >
      <div class="row">
        <div class="col-md-6">
          <img src="ticket/orangecolor.jpg" alt="orange color" width="500" height="950"></img>
        </div>
        <div class="col-md-6">
            <div class="flexBox" style="
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
        padding-top: 5%;">
          <header> <h1>Thank you for joining CARE</h1></header>
            </div>
          <form>
            <div class="form-group">
              <label for="exampleInputEmail1">Seller Name</label>
              <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Your Name">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Address</label>
              <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Mobile number</label>
              <input type="number" class="form-control" id="exampleInputnumber" placeholder="Mobile number">
            </div>
            <p>
              <strong>Please Subscribe to get new updates to registered Email id : <%= user.userEmail %> </strong>
            </p>
            <div class="form-group form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">I accept the Privacy Policy and the Terms of Service</label>
            </div>
            <a class="btn btn-primary continue-btn" href="/profile">Subscribe</a>
          </form>
        </div>
      </div>
    </div>
